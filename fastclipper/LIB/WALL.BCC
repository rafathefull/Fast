  _gtSetColor( & sNew );
  cLinea = _xgrab( 1024 );
  for( nI1 = nY1; nI1 <= nY2; nI1++ )
    {
    cAux = cLinea;
    for( nI2 = nX1; nI2 <= nX2; nI2 += 4 )
      {
      _bcopy( cLinea, ( ( nI1 % 2 == 0 ) ? (LPBYTE)"ÂÄÁÄ" : (LPBYTE)"ÁÄÂÄ" ), 4 );
      cLinea += 4;
      }
    cLinea = cAux;
    _gtWriteAt( nI1, nX1, (LPBYTE)cLinea, nX2 - nX1 + 1 );
    }
  _xfree( cLinea );
  _gtSetColor( & sOld );
  }
