  WORD   nY2    = ( ( _parinfo( 3 ) == 0 ) ? _gtMaxRow() : _parni( 3 ) );
  WORD   nX2    = ( ( _parinfo( 4 ) == 0 ) ? _gtMaxCol() : _parni( 4 ) );
  WORD   nI1;
  WORD   nI2;
